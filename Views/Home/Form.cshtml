<!DOCTYPE html>
<html>
<head>
    <title>Environmental Issue Report</title>
    <style>
        /* Basic styling for the form */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f2f2f2;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            resize: vertical;
        }

        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="number"] {
            width: 60px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }

        .error-message {
            color: #ff0000;
            margin-top: 5px;
        }

        .success-message {
            color: #008000;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <h1>Environmental Issue Report</h1>
    <form id="issueForm">
        <label for="location">Location:</label>
        <select id="location" name="location" required>
            <option value="">Select a location</option>
            <option value="Downtown Tangier">Downtown Tangier</option>
            <option value="Port of Tangier-Med">Port of Tangier-Med</option>
            <option value="Tangier Beach">Tangier Beach</option>
            <option value="Tangier City Mall">Tangier City Mall</option>
            <option value="Tangier American School">Tangier American School</option>
            <option value="Tangier Corniche">Tangier Corniche</option>
            <option value="Mendoubia Gardens">Mendoubia Gardens</option>
            <option value="Tangier Municipal Beach">Tangier Municipal Beach</option>
            <option value="Grand Stade de Tanger">Grand Stade de Tanger</option>
            <option value="Tangier Science School">Tangier Science School</option>>
        </select>

        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <option value="">Select a category</option>
            <option value="waterwaste">Water Waste</option>
            <option value="airpollution">Air Pollution</option>
            <option value="forestpollution">Forest Pollution</option>
        </select>

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required></textarea>

        <label for="severity">Severity:</label>
        <input type="number" id="severity" name="severity" min="1" max="10" required>

        <input type="submit" value="Submit">
    </form>

    <script>
        document.getElementById('issueForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent form submission

            // Collect form data
            var formData = new FormData(this);
            var issueData = {
                location: formData.get('location'),
                category: formData.get('category'),
                description: formData.get('description'),
                severity: formData.get('severity')
            };

            // Send the issueData to the server for processing
            submitIssueData(issueData);
        });

        function submitIssueData(issueData) {
            // Perform an AJAX request to the server to send the issueData
            // You can use libraries like fetch or jQuery.ajax for this purpose
            // Example using fetch:
            fetch('/report-issue', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(issueData)
            })
                .then(function (response) {
                    if (response.ok) {
                        alert('Issue report submitted successfully!');
                        // Optionally, reset the form after successful submission
                        document.getElementById('issueForm').reset();
                    } else {
                        alert('Failed to submit issue report. Please try again.');
                    }
                })
                .catch(function (error) {
                    console.error('Error:', error);
                    alert('An error occurred while submitting the issue report.');
                });
        }
    </script>
</body>
</html>
